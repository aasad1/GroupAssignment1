<p id="notice"><%= notice %></p>

<h1>Offices</h1>
<style>
  h1 {
    color:red;
    background-color: blanchedalmond;
    border-block-start-width:70px;
    width: 300px;
  


  }
  body{
    background-color:blanchedalmond;
  }
</style>

<table>
  <thead>
    <tr>
      <th>Building</th>
      <th>Room number</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offices.each do |office| %>
      <tr>
        <td><%= office.building %></td>
        <td><%= office.room_number %></td>
        <td><%= office.professor.name %></td>
        <td><%= link_to 'Show', office %></td>
        <td><%= link_to 'Edit', edit_office_path(office) %></td>
        <td><%= link_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

